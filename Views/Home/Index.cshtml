@model List<WebTruyenHay.Models.Comic>
@{
    ViewData["Title"] = "Trang Chủ - Góc Truyện Tranh";
}

<div class="container py-4">
<!-- Hero Section -->
<section class="hero-section mb-5">
    <div class="container">
        <div class="row align-items-center py-5">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="hero-content fade-in-up">
                    <h1 class="display-4 fw-bold mb-4">
                        <span class="text-gradient">Góc Truyện Tranh</span>
                    </h1>
                    <p class="lead mb-4 text-muted">
                        Khám phá thế giới truyện tranh tuyệt vời với hàng ngàn bộ truyện chất lượng cao, 
                        cập nhật liên tục và hoàn toàn miễn phí.
                    </p>
                    <div class="hero-buttons">
                        <a href="@Url.Action("Index", "Comics")" class="btn btn-primary btn-lg me-3 mb-2">
                            <i class="fas fa-compass me-2"></i>
                            Khám phá ngay
                        </a>
                        <a href="#popular-comics" class="btn btn-outline-primary btn-lg mb-2">
                            <i class="fas fa-fire me-2"></i>
                            Truyện hot
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <div class="hero-card bg-glass shadow-custom">
                        <i class="fas fa-book-open text-gradient" style="font-size: 8rem;"></i>
                        <h5 class="mt-3 mb-2">Đọc truyện mọi lúc, mọi nơi</h5>
                        <p class="text-muted">Giao diện thân thiện, tốc độ tải nhanh</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Updates Section -->
<section class="mb-5">
    <div class="container">
        <div class="section-header d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title">
                <i class="fas fa-clock text-primary me-2"></i>
                Cập nhật gần đây
            </h2>
            <a href="@Url.Action("Index", "Comics")" class="btn btn-outline-primary">
                Xem tất cả
                <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
        
        <div class="row g-4">
            @foreach (var comic in Model.Take(6))
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-6">
                    <div class="comic-card-modern">
                        <a href="@Url.Action("Details", "Comics", new { id = comic.Id })" class="text-decoration-none">
                            <div class="comic-image-container">
                                <img src="@(string.IsNullOrEmpty(comic.CoverImageUrl) ? "/images/no-image.svg" : comic.CoverImageUrl)" 
                                     class="comic-image" alt="@comic.Title">
                                <div class="comic-overlay">
                                    <div class="comic-info">
                                        <span class="chapter-count">
                                            <i class="fas fa-book me-1"></i>
                                            @comic.Chapters.Count chương
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="comic-content">
                                <h6 class="comic-title" title="@comic.Title">@comic.Title</h6>
                                <p class="comic-author">@comic.Author</p>
                                @if (comic.Chapters.Any())
                                {
                                    var latestChapter = comic.Chapters.OrderByDescending(c => c.UpdatedDate).First();
                                    <div class="latest-chapter">
                                        <span class="badge bg-success">
                                            <i class="fas fa-bookmark me-1"></i>
                                            Chương @latestChapter.ChapterNumber
                                        </span>
                                    </div>
                                }
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Popular Comics Section -->
<section class="mb-5" id="popular-comics">
    <div class="container">
        <div class="section-header d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title">
                <i class="fas fa-fire text-warning me-2"></i>
                Truyện phổ biến
            </h2>
        </div>
        
        <div class="row g-4">
            @if (ViewBag.PopularComics != null)
            {
                @foreach (var comic in (List<WebTruyenHay.Models.Comic>)ViewBag.PopularComics)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="popular-comic-card">
                            <div class="row g-0">
                                <div class="col-4">
                                    <div class="popular-comic-image">
                                        <img src="@(string.IsNullOrEmpty(comic.CoverImageUrl) ? "/images/no-image.svg" : comic.CoverImageUrl)" 
                                             alt="@comic.Title">
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="popular-comic-content">
                                        <h6 class="popular-comic-title">
                                            <a href="@Url.Action("Details", "Comics", new { id = comic.Id })">
                                                @comic.Title
                                            </a>
                                        </h6>
                                        <p class="popular-comic-author">
                                            <i class="fas fa-user me-1"></i>
                                            @comic.Author
                                        </p>
                                        <div class="popular-comic-stats">
                                            <span class="stat-item">
                                                <i class="fas fa-eye me-1"></i>
                                                @comic.ViewCount.ToString("N0")
                                            </span>
                                            @if (comic.Chapters.Any())
                                            {
                                                var latestChapter = comic.Chapters.OrderByDescending(c => c.UpdatedDate).First();
                                                <span class="stat-item">
                                                    <i class="fas fa-bookmark me-1"></i>
                                                    Ch. @latestChapter.ChapterNumber
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- New Comics Section -->
<section class="mb-5">
    <div class="container">
        <div class="section-header d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title">
                <i class="fas fa-star text-success me-2"></i>
                Truyện mới nhất
            </h2>
        </div>
        
        <div class="row g-4">
            @if (ViewBag.NewComics != null)
            {
                @foreach (var comic in (List<WebTruyenHay.Models.Comic>)ViewBag.NewComics)
                {
                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-6">
                        <div class="comic-card-modern">
                            <a href="@Url.Action("Details", "Comics", new { id = comic.Id })" class="text-decoration-none">
                                <div class="comic-image-container">
                                    <img src="@(string.IsNullOrEmpty(comic.CoverImageUrl) ? "/images/no-image.svg" : comic.CoverImageUrl)" 
                                         class="comic-image" alt="@comic.Title">
                                    <div class="comic-overlay">
                                        <div class="new-badge">
                                            <i class="fas fa-star me-1"></i>
                                            MỚI
                                        </div>
                                    </div>
                                </div>
                                <div class="comic-content">
                                    <h6 class="comic-title" title="@comic.Title">@comic.Title</h6>
                                    <p class="comic-author">@comic.Author</p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }        </div>
    </div>
</section>
</div>

@section Styles {
    <style>
        /* === MAIN CONTENT WRAPPER === */
        .main-content {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px 20px 0 0;
            margin-top: -20px;
            padding: 2rem 0;
        }
        
        /* === HERO SECTION === */
        .hero-section {
            background: transparent;
            padding: 2rem 0;
        }
        
        .hero-card {
            padding: 3rem;
            border-radius: 20px;
            text-align: center;
            transition: transform 0.3s ease;
        }
        
        .hero-card:hover {
            transform: translateY(-10px);
        }
        
        .hero-buttons .btn {
            margin: 0.25rem;
        }
        
        /* === SECTION HEADERS === */
        .section-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #2c3e50;
            margin: 0;
        }
        
        .section-header {
            border-bottom: 3px solid #667eea;
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }
        
        /* === MODERN COMIC CARDS === */
        .comic-card-modern {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            height: 100%;
        }
        
        .comic-card-modern:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }
        
        .comic-image-container {
            position: relative;
            overflow: hidden;
            height: 280px;
        }
        
        .comic-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .comic-card-modern:hover .comic-image {
            transform: scale(1.05);
        }
        
        .comic-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.7) 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
            display: flex;
            align-items: flex-end;
            padding: 1rem;
        }
        
        .comic-card-modern:hover .comic-overlay {
            opacity: 1;
        }
        
        .comic-info {
            color: white;
            font-weight: 500;
        }
        
        .chapter-count {
            background: rgba(255, 255, 255, 0.2);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            backdrop-filter: blur(10px);
            font-size: 0.875rem;
        }
        
        .new-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
        }
        
        .comic-content {
            padding: 1.25rem;
        }
        
        .comic-title {
            font-size: 1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            line-height: 1.3;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .comic-author {
            color: #7f8c8d;
            font-size: 0.875rem;
            margin-bottom: 0.75rem;
        }
        
        .latest-chapter .badge {
            font-size: 0.75rem;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
        }
        
        /* === POPULAR COMIC CARDS === */
        .popular-comic-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            height: 100%;
        }
        
        .popular-comic-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }
        
        .popular-comic-image {
            height: 120px;
            overflow: hidden;
        }
        
        .popular-comic-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .popular-comic-card:hover .popular-comic-image img {
            transform: scale(1.1);
        }
        
        .popular-comic-content {
            padding: 1.25rem;
            height: 120px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        
        .popular-comic-title {
            margin: 0 0 0.5rem 0;
            font-size: 1rem;
            font-weight: 600;
        }
        
        .popular-comic-title a {
            color: #2c3e50;
            text-decoration: none;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .popular-comic-title a:hover {
            color: #667eea;
        }
        
        .popular-comic-author {
            color: #7f8c8d;
            font-size: 0.875rem;
            margin: 0 0 0.75rem 0;
        }
        
        .popular-comic-stats {
            display: flex;
            justify-content: space-between;
            font-size: 0.8rem;
        }
        
        .stat-item {
            color: #95a5a6;
            font-weight: 500;
        }
        
        .stat-item:first-child {
            color: #667eea;
        }
          .stat-item:last-child {
            color: #27ae60;
        }
        
        /* === RESPONSIVE === */
        @@media (max-width: 768px) {
            .section-title {
                font-size: 1.5rem;
            }
            
            .hero-card {
                padding: 2rem 1rem;
            }
            
            .comic-image-container {
                height: 220px;
            }
            
            .popular-comic-content {
                height: auto;
                min-height: 100px;
            }
            
            .hero-buttons {
                text-align: center;
            }
        }
        
        @@media (max-width: 576px) {
            .comic-image-container {
                height: 200px;            }
            
            .section-header {
                flex-direction: column;
                align-items: flex-start !important;
            }
            
            .section-header .btn {
                margin-top: 1rem;
            }
        }
    </style>
}
