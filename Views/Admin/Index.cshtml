@{
    ViewData["Title"] = "Quản trị - Trang chủ";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="glass-effect p-4 rounded-4 mb-4">
                <h2 class="text-primary fw-bold mb-2">
                    <i class="fas fa-shield-alt me-2"></i>
                    Quản trị hệ thống
                </h2>
                <p class="text-muted mb-0">Chào mừng bạn đến với trang quản trị Web Truyện Hay</p>
            </div>
        </div>
    </div>    <div class="row mt-4">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-primary text-white border-0 shadow-lg h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title fw-bold">Quản lý truyện</h4>
                            <p class="card-text opacity-75">Thêm, sửa, xóa truyện</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-book fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="@Url.Action("Comics", "Admin")" class="text-white text-decoration-none d-flex align-items-center">
                        <span class="me-2">Xem chi tiết</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-success text-white border-0 shadow-lg h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title fw-bold">Thêm truyện mới</h4>
                            <p class="card-text opacity-75">Đăng truyện mới</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-plus fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="@Url.Action("CreateComic", "Admin")" class="text-white text-decoration-none d-flex align-items-center">
                        <span class="me-2">Thêm ngay</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-info text-white border-0 shadow-lg h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title fw-bold">Thống kê</h4>
                            <p class="card-text opacity-75">Xem thống kê hệ thống</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-bar fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="#" class="text-white text-decoration-none d-flex align-items-center">
                        <span class="me-2">Xem chi tiết</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-warning text-white border-0 shadow-lg h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title fw-bold">Cài đặt</h4>
                            <p class="card-text opacity-75">Cấu hình hệ thống</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-cog fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="#" class="text-white text-decoration-none d-flex align-items-center">
                        <span class="me-2">Cài đặt</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>    <div class="row mt-4">
        <div class="col-12">
            <div class="card glass-effect border-0 shadow-lg">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 text-primary fw-bold">
                        <i class="fas fa-clock me-2"></i>
                        Hoạt động gần đây
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="fas fa-tools fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-0">Chức năng này đang được phát triển...</p>
                        <small class="text-muted">Sẽ hiển thị các hoạt động quản trị gần đây</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
